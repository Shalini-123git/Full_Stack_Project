<% layout("layouts/boilerplate") %>

<div class="card p-4 shadow">
  <h2>Bill Details</h2>
  <p><strong>Patient Name:</strong> <%= bill.patientName %></p>
  <p><strong>Total Amount:</strong> â‚¹<%= bill.totalAmount.toLocaleString() %></p>
  <p><strong>Date:</strong> <%= bill.createdAt.toDateString() %></p>
  <p><strong>File URL:</strong> <a href="<%= bill.fileUrl %>" target="_blank">View Original</a></p>

  <h4>Analysis</h4>
  <ul>
    <% bill.analysis.warnings.forEach(w => { %>
      <li class="text-danger"><%= w %></li>
    <% }) %>
  </ul>

  <h4>Extracted Text</h4>
  <pre style="white-space: pre-wrap;"><%= bill.rawText %></pre>

  <a href="/bills/view" class="btn btn-secondary mt-3">Back to Bills</a>
</div>

