<% layout("layouts/boilerplate") %>
<div class="card p-4 shadow">
  <h2>Upload Hospital Bill</h2>

  <% if (user) { %>
    <p class="text-muted">Logged in as: <%= user.username %> (<%= user.email %>)</p>
  <% } %>

  <form action="/bills/upload" method="POST">
    <div class="mb-3">
      <label for="fileUrl" class="form-label">Cloudinary File URL</label>
      <input 
        type="url" 
        id="fileUrl" 
        name="fileUrl" 
        class="form-control" 
        placeholder="https://res.cloudinary.com/.../bill.pdf" 
        required>
    </div>

    <button type="submit" class="btn btn-success">Analyze Bill</button>
    <a href="/bills/view" class="btn btn-secondary">Back to Bills</a>
  </form>
</div>

