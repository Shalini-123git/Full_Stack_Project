<% layout('/layouts/boilerplate') -%>
<body>
    <h1>Edit Report:</h1>
    <form method="POST" action="/report/<%= report._id %>?_method=PUT" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input 
            type="text"
            value="<%= report.title %>"
            id="title"
            name="title"
        >
        <br/>
        <label for="description">Description:</label>
        <input 
            type="text"
            value="<%= report.description %>"
            id="description"
            name="description"
        >
        <br/>
        <label for="file">Upload Report:</label>
        <input 
            type="file"
            placeholder="choose file"
            id="file"
            name="file"
        >
        <br/>
        <button>Edit</button>
    </form>
</body>