<% layout('/layouts/boilerplate') -%>
<body>
    <h1>Create New Report:</h1>
    <form method="post" action="/report/create" enctype="multipart/form-data">
        <label for="title">Title:</label>
        <input 
            type="text"
            placeholder="Ex: Blood Report, Ultrasound Report"
            id="title"
            name="title"
            required
        >
        <br/>
        <label for="description">Description:</label>
        <input 
            type="text"
            placeholder="Enter Details"
            id="description"
            name="description"
            required
        >
        <br/>
        <label for="file">Upload Report:</label>
        <input 
            type="file"
            placeholder="Choose your report"
            id="file"
            name="file"
            required
        >
        <br/>
        <button>Add</button>
    </form>
</body>